@model List<MyVlog.Models.Entity.Work>
@{
	ViewData["Title"] = "AdminWork";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div style="border: 2px solid black; margin: auto; width:70%; margin-top:30px;">
	<a class="btn btn-primary" href="/Admin/AdminCreate/">Create</a>
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Image</th>
				<th scope="col">Title</th>
				<th scope="col">Text</th>
				<th scope="col">Date</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@item.ID</th>
					<td>
						<img src="@item.ImageURL" style="width:100px; height:100px;" />
					</td>
					
					<br />
					@if (item.Title.Length >= 80)
					{
						<td>@item.Title.Remove(79) ...</td>
					}
					else
					{
						<td>@item.Title</td>
					}
					@if (item.Text.Length >= 400)
					{
						<td title="@item.Text">@item.Text.Remove(399) ...</td>
					}
					else
					{
						<td title="@item.Text">@item.Text</td>
					}
					<td>@item.Date</td>
					<td>
						<a class="btn btn-danger" href="/Admin/AdminDelete/@item.ID/">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>